@page "/"

<PageTitle>Index</PageTitle>

<AuthorizeView>
    <Authorized>
        <h1>Hello, @context.User.Identity.Name! You are a @_role.</h1>
    </Authorized>
    <Authorizing>
        <h1>Checking autorization, please wait...</h1>
    </Authorizing>
    <NotAuthorized>
        <h1>You are not signed in.</h1>
    </NotAuthorized>
</AuthorizeView>

@code {

    string _role;

    [CascadingParameter]
    Task<AuthenticationState> AuthenticationState { get; set; }

    protected override async void OnInitialized()
    {
        var authState = await AuthenticationState;
        if (authState != null)
        {
            _role = authState.User.IsInRole(nameof(GlobalRoles.SuperAdmin)) 
                ? nameof(GlobalRoles.SuperAdmin).ToLower() 
                : nameof(GlobalRoles.User).ToLower();
        }
    }

}
